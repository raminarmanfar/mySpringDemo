<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="triangle" class="org.ramin.javabrains.Triangle" autowire="byName">
	</bean>

	<bean id="pointA" class="org.ramin.javabrains.Point">
		<property name="id" value="1" />
		<property name="x" value="0" />
		<property name="y" value="0" />
	</bean>

	<bean id="pointB" class="org.ramin.javabrains.Point">
		<property name="id" value="2" />
		<property name="x" value="-20" />
		<property name="y" value="0" />
	</bean>

	<bean id="pointC" class="org.ramin.javabrains.Point">
		<property name="id" value="3" />
		<property name="x" value="20" />
		<property name="y" value="0" />
	</bean>

</beans>